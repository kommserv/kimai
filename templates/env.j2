###> doctrine/doctrine-bundle ###
# Format described at http://docs.doctrine-project.org/projects/doctrine-dbal/en/latest/reference/configuration.html#connecting-using-a-url
# For an SQLite database, use: "sqlite:///%kernel.project_dir%/var/data/kimai.sqlite"
# Configure your db driver and server_version in config/packages/doctrine.yaml
# DATABASE_URL=mysql://db_user:db_password@127.0.0.1:3306/db_name
DATABASE_URL="mysql://{{ kimai_dbuser }}:{{ kimai_dbpass }}@{{ kimai_dbhost | default('localhost') }}:{{ kimai_dbport | default('3306') }}/{{ kimai_dbname }}"
# DATABASE_URL=sqlite:///%kernel.project_dir%/var/data/kimai.sqlite
###< doctrine/doctrine-bundle ###

###> symfony/swiftmailer-bundle ###
# https://symfony.com/doc/current/reference/configuration/swiftmailer.html
# For Gmail as a transport, use: "gmail://username:password@localhost"
# For a generic SMTP server, use: "smtp://localhost:25?encryption=&auth_mode="
# Delivery is disabled by default via "null://localhost"
{% if kimai_email_transport == "" %}
# Disable email
MAILER_URL="null://localhost"
{% elif kimai_email_transport == "smtp" and kimai_email_encryption == "" %}
# Unauthenticated SMTP
# MAILER_URL="smtp://localhost:25?encryption=&auth_mode="
MAILER_URL="smtp://{{ kimai_email_host | default('localhost') }}:{{ kimai_email_port | default('25') }}?encryption={{ kimai_email_encryption | default('') }}&auth_mode={{ kimai_email_auth_mode | default('') }}&sender_address={{ kimai_notify_from }}&local_domain={{ inventory_hostname }}"
{% elif kimai_email_transport == "smtp" and kimai_email_encryption == "tls" %}
# Authenticated SMTP
MAILER_URL="smtp://{{ kimai_email_username }}:{{ kimai_email_password }}@{{ kimai_email_host | default('localhost') }}:{{ kimai_email_port | default('25') }}?encryption={{ kimai_email_encryption | default('') }}&auth_mode={{ kimai_email_auth_mode | default('') }}&sender_address={{ kimai_notify_from }}&local_domain={{ inventory_hostname }}"
{% elif kimai_email_transport == "gmail" %}
# Google Mail
MAILER_URL="gmail://{{ kimai_email_username }}:{{ kimai_email_password }}@localhost?encryption={{ kimai_email_encryption | default('') }}&auth_mode={{ kimai_email_auth_mode | default('') }}"
{% else %}
# Sendmail
# MAILER_URL="sendmail://{{ inventory_hostname }}?command={{ kimai_email_command | default('/usr/sbin/sendmail -t -i') }}&local_domain={{ inventory_hostname }}&sender_address={{ kimai_notify_from }}"
MAILER_URL="sendmail://{{ inventory_hostname }}"
{% endif %}

###< symfony/swiftmailer-bundle ###

